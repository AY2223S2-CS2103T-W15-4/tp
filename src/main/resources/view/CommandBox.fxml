<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane minWidth="420" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" percentWidth="90"/>
      <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" percentWidth="10"/>
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
     <TextField fx:id="commandTextField" minHeight="40" onAction="#handleCommandEntered" minWidth="320" promptText="Enter command here..."/>
      <Button fx:id="enterButton" minHeight="40" alignment="CENTER" minWidth="100" onAction="#handleCommandEntered" mnemonicParsing="false" text="ENTER" GridPane.columnIndex="1" />
   </children>
</GridPane>
