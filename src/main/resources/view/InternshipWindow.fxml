<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.stage.Stage?>

<fx:root resizable="true" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <icons>
      <Image url="@/images/internship.png" />
   </icons>

   <scene>
      <Scene>
         <stylesheets>
            <URL value="@InternshipWindow.css" />
         </stylesheets>
         <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="340" minWidth="340" prefHeight="400.0" prefWidth="600.0">
            <content>
               <VBox fx:id="vBox" styleClass="background">
                  <children>
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Company Name:" />
                     <Label fx:id="companyName" />
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Job Title:" />
                     <Label fx:id="jobTitle" />
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Location:" />
                     <Label fx:id="place" />
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Salary:" />
                     <Label fx:id="salary" />
                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Rating:" />
                     <Label fx:id="rating" />
                  </children>
               </VBox>
            </content>
         </ScrollPane>
      </Scene>
   </scene>
</fx:root>
